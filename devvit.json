{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "delulu-celulu",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": { "inline": true, "entry": "splash.html" },
      "game": { "entry": "game.html" }
    }
  },
  "server": { "dir": "dist/server", "entry": "index.cjs" },
  "media": { "dir": "assets" },
  "forms": {
    "createRoundForm": "/internal/menu/round-submit"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "Create a new delulu-celulu post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      },
      {
        "label": "Add round (image + answer)",
        "description": "Upload an image, set Delulu/Celulu, and optional celebrity name",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/provide-data"
      }
    ]
  },
  "triggers": { "onAppInstall": "/internal/on-app-install" },
  "dev": { "subreddit": "delulu_celulu_dev" }
}
