{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "delulu-celulu",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": { "inline": true, "entry": "splash.html" },
      "game": { "entry": "game.html" }
    }
  },
  "server": { "dir": "dist/server", "entry": "index.cjs" },
  "media": { "dir": "assets" },
  "forms": {
    "createGameForm": "/internal/form/create-game-form",
    "deleteLevelForm": "/internal/form/delete-level",
    "createPostForm": "/internal/form/create-post"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "Create a new delulu-celulu post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      },
      {
        "label": "Add level",
        "description": "Provide level name and game data for the game",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/provide-data"
      },
      {
        "label": "Manage levels",
        "description": "View and delete levels in the queue",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/manage-levels"
      },
      {
        "label": "Post a level",
        "description": "Create a new game post from an uploaded level",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-level"
      }
    ]
  },
  "triggers": { "onAppInstall": "/internal/on-app-install" },
  "dev": { "subreddit": "delulu_celulu_dev" }
}
